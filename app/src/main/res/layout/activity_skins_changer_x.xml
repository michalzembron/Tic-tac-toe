            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/skin_x_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:background="#A6858585"
                android:text="@string/skin_x_0_description"
                app:drawableStartCompat="@drawable/ic_skins_x_0" />

            <TextView
                android:id="@+id/skin_x_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:background="#A6858585"
                android:text="@string/skin_x_1_description"
                app:drawableStartCompat="@drawable/ic_skins_1" />

            <TextView
                android:id="@+id/skin_x_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:background="#A6B80000"
                android:text="@string/skin_x_2_description"
                app:drawableStartCompat="@drawable/ic_skins_2" />

            <TextView
                android:id="@+id/skin_x_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:background="#A6B80000"
                android:text="@string/skin_x_3_description"
                app:drawableStartCompat="@drawable/ic_skins_3" />

            <TextView
                android:id="@+id/skin_x_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:background="#A6B80000"
                android:text="@string/skin_x_4_description"
                app:drawableStartCompat="@drawable/ic_skins_4" />

            <TextView
                android:id="@+id/skin_x_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:background="#A6B80000"
                android:text="@string/skin_x_5_description"
                app:drawableStartCompat="@drawable/ic_skins_5" />

            <TextView
                android:id="@+id/skin_x_6"
                android:layout_width="wrap_content"

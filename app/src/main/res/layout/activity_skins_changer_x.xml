                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:background="#A6B80000"
                android:text="@string/skin_x_6_description"
                app:drawableStartCompat="@drawable/ic_skins_6" />

            <TextView
                android:id="@+id/skin_x_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:background="#A6B80000"
                android:text="@string/skin_x_7_description"
                app:drawableStartCompat="@drawable/ic_skins_7" />

            <TextView
                android:id="@+id/skin_x_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:background="#A6B80000"
                android:text="@string/skin_x_8_description"
                app:drawableStartCompat="@drawable/ic_skins_8" />
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>